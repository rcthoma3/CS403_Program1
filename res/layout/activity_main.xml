<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            android:id="@+id/FNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:id="@+id/FNameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="First Name"
            android:layout_row="0"
            android:layout_column="1" />
        <TextView
            android:id="@+id/LNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_row="1"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/LNameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Last Name"
            android:layout_row="1"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/SchoolLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School"
            android:layout_row="2"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/SchoolInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="School Name"
            android:layout_row="2"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/YearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduation Year"
            android:layout_row="3"
            android:layout_column="0"/>
        <Spinner
            android:id="@+id/YearInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_row="3"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/DegreeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Degree Type"
            android:layout_row="4"
            android:layout_column="0"/>
        <Spinner
            android:id="@+id/DegreeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_row="4"
            android:layout_column="1"
            android:entries="@array/DegreeTypes" />
        <TextView
            android:id="@+id/MajorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major"
            android:layout_row="5"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/MajorInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Major"
            android:layout_row="5"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/SwitchLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Additional Info"
            android:layout_row="6"
            android:layout_column="0"/>

        <Switch
            android:id="@+id/SwitchInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ActivitiesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Info"
            android:layout_row="7"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/ActivitiesInput"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_row="7"
            android:ems="10"
            android:scrollHorizontally="false"
            android:gravity="top|left"
            android:hint="Put anything here that you would like after your bio!"
            android:lines="5"
            android:minLines="1"
            android:maxLines="5"
            android:inputType="textMultiLine" />

    </GridLayout>

    <Button
        android:id="@+id/ButtonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Bio"
        android:onClick="submitBio"/>

</LinearLayout>